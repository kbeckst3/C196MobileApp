<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8sp">

        <TextView
            android:id="@+id/assessmentItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Assessment Title"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/assessmentStartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="Start Date:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/assessmentItemStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="12/22/2021"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/assessmentItemEndLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="End Date:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/assessmentItemEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="12/22/2021"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/assessmentAlert"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_baseline_notifications_24" />

</androidx.cardview.widget.CardView>