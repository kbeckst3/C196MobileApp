<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8sp">

        <TextView
            android:id="@+id/courseItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Course Title"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courseItemStartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="Start Date:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/courseItemStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="12/22/2021"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/courseItemEndLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="End Date:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/courseItemEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="12/22/2021"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/editCourse"
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/courseAlert"
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_baseline_notifications_24" />
    </LinearLayout>

</androidx.cardview.widget.CardView>